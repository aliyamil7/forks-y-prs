{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true, // ✅ permite importar JSON
    "allowSyntheticDefaultImports": true // ✅ permite imports por default de JSON
  },
  "include": ["src"]
}
